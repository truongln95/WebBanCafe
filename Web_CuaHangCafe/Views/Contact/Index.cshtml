@model Web_CuaHangCafe.Models.TbPhanHoi

@{
    ViewData["Title"] = "Liên hệ";
    ViewData["Contact"] = "active";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Breadcrumb Begin-->
<div class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__links">
                    <a asp-controller="home" asp-action="index">
                        <i class="fa-solid fa-house"></i>
                        Trang chủ
                    </a>
                    <span>Liên hệ</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Breadcrumb End-->

<!--Contact Section Begin-->
<section class="contact spad">
    <div class="container">
        <div class="row d-flex">
            <div class="col-lg-6 col-md-6">
                <div class="contact__content">
                    <div class="contact__address">
                        <h5>Thông tin liên hệ</h5>
                        <ul>
                            <li>
                                <h6>
                                    <i class="fas fa-location-arrow"></i>
                                    Địa chỉ
                                </h6>
                                <p>Số 3 phố Cầu Giấy, P.Láng Thượng, Q.Đống Đa, Hà Nội</p>
                            </li>
                            <li>
                                <h6>
                                    <i class="fas fa-phone"></i>
                                    Điện thoại
                                </h6>
                                <p><span>1900 3636</span></p>
                            </li>
                            <li>
                                <h6>
                                    <i class="fas fa-envelope"></i>
                                    Hỗ trợ
                                </h6>
                                <p>mail@gmail.com</p>
                            </li>
                        </ul>
                    </div>
                    <div class="contact__form">
                        <h5>Gửi lời nhắn</h5>
                        <p class="@TempData["Status"]">@TempData["Message"]</p>
                        <form asp-action="index">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input
                                asp-for="TieuDe"
                                type="text"
                                class="form-control"
                                maxlength="50"
                                placeholder="Tiêu đề"
                                autocomplete="off"
                                required />
                            <input
                                asp-for="SoDienThoai"
                                type="tel"
                                class="form-control"
                                maxlength="10"
                                placeholder="Số điện thoại"
                                autocomplete="off"
                                required />
                            <textarea
                                asp-for="NoiDung"
                                class="form-control"
                                placeholder="Lời nhắn"
                                required>
                            </textarea>
                            <button type="submit" value="Create" class="site-btn">Gửi lời nhắn</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--Contact Section End-->
