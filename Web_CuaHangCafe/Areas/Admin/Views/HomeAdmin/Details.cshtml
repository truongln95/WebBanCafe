@model Web_CuaHangCafe.ViewModels.ProductViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = ViewBag.name;
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container" style="margin-bottom:20px;">
    <div class="row">
        <div class="col-lg-8 col-md-12 col-sm-12">
            <div class="page-header">
                <h3 class="page-title">Chi tiết sản phẩm sản phẩm: <span style="color:#666;">@ViewBag.name</span></h3>
            </div>
        </div>
    </div>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Mã sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaSanPham)
        </dd>
        <dt class="col-sm-2">
            Tên sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenSanPham)
        </dd>
        <dt class="col-sm-2">
            Giá bán
        </dt>
        <dd class="col-sm-10">
            @Model.GiaBan.Value.ToString("n0") &#8363;
        </dd>
        <dt class="col-sm-2">
            Loại sản phẩm
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LoaiSanPham)
        </dd>
        <dt class="col-sm-2">
            Mô tả
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-2">
            Hình ảnh
        </dt>
        <dd class="col-sm-10">
            <img style="width:250px;" src=@Url.Content("../../img/Products/" + Model.HinhAnh) />
        </dd>
        <dt class="col-sm-2">
            Ghi chú
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GhiChu)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="editproduct" asp-route-id="@Model?.MaSanPham">Sửa</a> |
    <a asp-action="index">Quay về</a>
</div>
